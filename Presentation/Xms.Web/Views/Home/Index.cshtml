                    <li class="dropdown main-user-tag" style="position:relative;">
                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="便签"><span class="glyphicon glyphicon-tag"></span> 便签</a>
                        <div class="dropdown-menu">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    便签
                                    <button type="button" class="close"><span aria-hidden="true"><i class="layui-icon">ဆ</i></span></button>
                                </div>
                                <div class="panel-body">
                                    <textarea id="main-user-tag-data"></textarea>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li style="position:relative;">
                        <a href="javascript:;" class="main-full-screen" title="全屏"><i class="layui-icon layui-icon-screen-full"></i> 全屏</a>
                    </li>

                    <li class="dropdown main-user-setting">
                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-user"></i> @app.CurrentUser.UserName<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dLabel">

                            <li><a data-href="@("/"+app.OrganizationUniqueName)/user/usersettings" onclick="takeToBottom(this)" data-id="page-setting" data-name="@app.T["usersettings"]" target="pageViewName" title="@app.T["usersettings"]"><span class="glyphicon glyphicon-cog"></span> @app.T["usersettings"]</a></li>
                            @if (app.CurrentUser.IsSuperAdmin)
                            {
                                <li><a href="@("/"+app.OrganizationUniqueName)/customize/index" target="_parent"><span class="glyphicon glyphicon-asterisk"></span> 开发平台</a></li>
                            }
                            <li><a href="@("/"+app.OrganizationUniqueName)/user/ResetMyPassword" target="pageViewName" data-name="@app.T["password"]" onclick="takeToBottom(this)" data-id="page-resetPassword" title="@app.T["password"]"><span class="glyphicon glyphicon-lock"></span> @app.T["password"]</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@("/"+app.OrganizationUniqueName)/account/signout" title="@app.T["signout"]"><span class="glyphicon glyphicon-log-out"></span> @app.T["signout"]</a></li>
                        </ul>
                    </li>
                    <li style="position:relative;" id="main-about">
                        <a href="javascript:;" title="版本信息"><i class="layui-icon layui-icon-more-vertical"></i></a>
                        <div class="hide" id="main-about-content">
                            <p>应用名称：@app.PlatformSettings.AppName</p>
                            <p>组织名称：@app.OrganizationName</p>
                            <p>架构版本：@app.PlatformSettings.VersionNumber</p>

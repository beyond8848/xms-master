            </div>
            <div class="navbar-default sidebar view_left" role="navigation">
                <div class="sidebar-nav navbar-collapse collapse" id="sidebarMenuWrap">
                    <div class="hide">
                        <button type="button" class="custom-toggle hidden-sm hidden-xs">
                            <span class="sr-only"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!--  toggle-tree 添加该样式可以使用点击下拉方式显示 -->
                    <ul class="nav in toggle-tree" id="side-menu"></ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
        </nav>
    </div>
    <div class="xms-sub-nav clearfix">
        <div class="dropdown  pull-right" id="xms-sb-ctrlClose">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu-ctrlClose" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu-ctrlClose">
                <li><a href="javascript:;" data-type="0">关闭当前页签</a></li>
                <li><a href="javascript:;" data-type="1">关闭左侧页签</a></li>
                <li><a href="javascript:;" data-type="2">关闭右侧页签</a></li>
                <li><a href="javascript:;" data-type="3">关闭其他页签</a></li>
                <li><a href="javascript:;" data-type="4">关闭全部页签</a></li>
            </ul>
        </div>
        <button type="button" class="btn btn-default pull-right xms-sb-ctrlRight"><span class="glyphicon glyphicon-chevron-right"></span></button>
        <button type="button" class="btn btn-default pull-left xms-sb-ctrlLeft"><span class="glyphicon glyphicon-chevron-left"></span></button>
        <a id="xms-subn-home" target="pageViewName" data-iframe="pageView" data-iframeid="pageView" data-name="首页" onclick="showIframe(this)" class="btn btn-default pull-left xms-subn-items-bgcol" href="javascript:void(0)"><span class="glyphicon glyphicon glyphicon-home"></span></a>
        <div class="btn-group pull-left xms-subn-items">
        </div>
    </div>
    <div class="page-wrap">
        <div class="page-content" id="page-content" style="">
            <iframe src="@((app.CurrentUser.UserSettings.HomePageArea.IsNotEmpty() ? (app.CurrentUser.UserSettings.HomePageArea.IndexOf("/" + app.OrganizationUniqueName) >= 0 ? app.CurrentUser.UserSettings.HomePageArea : "/"+ app.OrganizationUniqueName + app.CurrentUser.UserSettings.HomePageArea) : "/"+ app.OrganizationUniqueName + "/component/renderdashboard"))" id="pageView" name="pageViewName" class="ifrmae-list" width="100%" frameborder="0" onload="Javascript: iframeReady(this)" scrolling="auto"></iframe>
        </div>
    </div>

    <div class="xms-tooltip" id="tooltipShow" style="display: none;">

        <div class="xms-tooltip-arrow"><span class="glyphicon glyphicon-play"></span></div>
        <div class="xms-tooltip-content">
            <div class="xms-tooltip-close">x</div>
            <div class="xms-tooltip-info">
            </div>
        </div>
    </div>
    @{await Html.RenderPartialAsync("UserContext"); }
    <script src="~/content/js/requirejs/require.js"></script>
    <script src="~/content/js/requirejs/config.js"></script>
    <script src="~/content/customize/layui/layui.js"></script>
    <script>
        require(['jquery', 'notice', 'home.index', 'bootstrap', 'jqueryBootstrap'
            , 'mousewheel'
            , 'jquery.ui'
            , 'jquery.ui.widget'
            , 'jquery.ui.mouse'
            , 'jquery.ui.draggable'
            , 'xms.jquery'
            , 'xms.web'
            , 'fetch'
            , 'xmsMain.plugs'
            , 'xms-history'
            , 'jquery.toast'
            , 'jquery.tmpl'
            , 'jquery.cookie'
        ], function ($, notice, indexPage) {

            $(function () {
                if (top.location != location) {
                    top.location.href = location.href;
                }

                //页面初始化
                indexPage.init();

                //消息通知
                notice.init();
                notice.bindEvent();
            });

        });

        function iframeReady(obj) {
            var timer = setInterval(function () {
                if (typeof SetWinHeight === "undefined") {
                    return false;
                }
                SetWinHeight(this);
                clearInterval(timer);
            }, 50);
        }
    </script>
</body>
</html>